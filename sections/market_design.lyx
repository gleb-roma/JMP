\begin_inset Formula 
\begin{eqnarray*}
\tilde{V}(y) & > & V^{FD}(y),\\
\widetilde{U} & > & U^{FD},\\
\tilde{\alpha}(y) & > & \alpha^{FD}(y).
\end{eqnarray*}

